{
	"name": "@intlize/nextjs",
	"version": "0.0.1",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
  "description": "Next.js adapter for @intlize/core. Enables locale-based routing, SSR translation loading, and seamless integration with the Next.js App Router.",
  "keywords": [
    "i18n",
    "nextjs",
    "internationalization",
    "localization",
    "react",
    "adapter",
    "ssr"
  ],
	"author": "damianricobelli",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/damianricobelli/intlize.git",
		"directory": "packages/nextjs"
	},
	"homepage": "https://intlize.vercel.app",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "turbo lint",
		"prepublishOnly": "pnpm run build",
		"clean": "rm -rf .turbo && rm -rf node_modules dist",
		"test": "vitest"
	},
	"dependencies": {
		"@intlize/core": "workspace:*"
	},
	"peerDependencies": {
		"typescript": ">=5.0.2",
		"react": "^17.0.0 || ^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
    "@types/react": "catalog:",
		"next": "15.5.4",
		"react": "catalog:",
		"tsup": "catalog:",
		"terser": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
